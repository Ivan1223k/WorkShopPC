<Window x:Class="WorkShopPC.wndPC.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkShopPC.wndPC"
        mc:Ignorable="d"
        Title="SignUpWindow" Height="450" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="SignInWindow" Content="Войти" HorizontalAlignment="Right" Style="{StaticResource SignINUP }"
                VerticalAlignment="Center" Margin="5" Width="150" Click="SignInWindow_Click"/>


        <Border Grid.Row="1" Style="{StaticResource RoundedStackPanelStyle}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox x:Name="nameText" Text="Имя" Width="250" Margin="2" Style="{StaticResource RoundedTextBoxStyle}"/>
                <TextBox x:Name="surnameText" Text="Фамилия" Width="250" Margin="2" Style="{StaticResource RoundedTextBoxStyle}"/>
                <TextBox x:Name="phoneText" Text="Телефон" Width="250" Margin="2" Style="{StaticResource RoundedTextBoxStyle}"/>
                <TextBox x:Name="loginText" Text="Почта" Width="250" Margin="2" Style="{StaticResource RoundedTextBoxStyle}"/>
                <PasswordBox x:Name="passwordText" Width="250"/>

                <Button x:Name="signUpButton" Content="Зарегистрироваться" Click="SignUpButton_Click"
                    Style="{StaticResource SignINUP }" Width="200" Margin="10"/>
            </StackPanel>
        </Border>


    </Grid>
</Window>
