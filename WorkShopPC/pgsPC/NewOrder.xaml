<Page x:Class="WorkShopPC.pgsPC.NewOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkShopPC.pgsPC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewOrder">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>



        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Text="Имя" x:Name="FirstNameBox" Width="132" Height="34"/>
            <TextBox Text="Фамилия" x:Name="SecondNameBox" Width="132" Height="34"/>
            <TextBox Text="Телефон" x:Name="PhoneBox" Width="132" Height="34"/>
            <TextBox Text="Почта" x:Name="EmailBox" Width="132" Height="34"/>
            <TextBox Text="Адресс" x:Name="AddressBox" Width="132" Height="34"/>
        </StackPanel>

    </Grid>
</Page>
