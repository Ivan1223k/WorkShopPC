<Page x:Class="WorkShopPC.pgsPC.PartsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkShopPC.pgsPC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartsPage">

    <Grid>
  

        <ListView Name="ListParts" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
          HorizontalContentAlignment="Center" Style="{DynamicResource RoundedListViewStyle}">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource RoundedListViewItemStyle}"/>
            </ListView.ItemContainerStyle>
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="One" Height="Auto"></RowDefinition>
                            <RowDefinition x:Name="Two" Height="150"></RowDefinition>
                            <RowDefinition x:Name="Three" Height="150"></RowDefinition>
                            <RowDefinition x:Name="Four" Height="150"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!--<Image>
                            <Image.Source>
                                <Binding Path="">
                                    <Binding.TargetNullValue>
                                        <ImageSource>//</ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>-->

                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Center" Width="300"
                                   TextWrapping="Wrap" Text="{Binding PartName}" FontSize = "18"/>
                        <TextBlock VerticalAlignment="Center" TextAlignment="Center"  HorizontalAlignment="Center" Width="300" 
                                   TextWrapping="Wrap" Text="{Binding Description}" FontSize = "18" Margin="0,100,0,0"/>
                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Center" Width="300" 
                                   TextWrapping="Wrap" Text="{Binding Price}" FontSize = "18" Margin="0,200,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"></WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            
        </ListView>


    </Grid>
</Page>
